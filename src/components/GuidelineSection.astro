---
interface Props {
    title: string;
    guidelines: string[];
}

const { title, guidelines } = Astro.props;
---

<div class="guideline-section">
    <h3>{title}</h3>
    <ul>
        {guidelines.map(guideline => (
            <li>{guideline}</li>
        ))}
    </ul>
</div>

<style>
    .guideline-section {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #f1f5f9;
        transition: all 0.3s ease;
    }
    .guideline-section:hover {
        box-shadow: 0 8px 12px rgba(95, 95, 255, 0.1);
        border-color: rgba(95, 95, 255, 0.2);
    }
    h3 {
        color: #5F5FFF;
        margin: 0 0 1.5rem 0;
        font-size: 1.25rem;
        font-weight: 600;
    }
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    li {
        padding: 1rem 0;
        padding-left: 1.75rem;
        position: relative;
        color: #4b5563;
        border-bottom: 1px solid #f1f5f9;
        line-height: 1.6;
    }
    li:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }
    li:before {
        content: "â€¢";
        position: absolute;
        left: 0;
        color: #5F5FFF;
        font-size: 1.5rem;
        line-height: 1;
        top: 1rem;
    }
</style></content>