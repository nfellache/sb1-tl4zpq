---
const navItems = [
    { title: "Manufacturing SOPs", path: "/blog/category/manufacturing" },
    { title: "Quality Control", path: "/blog/category/quality" },
    { title: "Regulatory", path: "/blog/category/regulatory" },
    { title: "Training", path: "/blog/category/training" }
];
---

<header class="site-header">
    <div class="container">
        <nav class="main-nav">
            <a href="/" class="logo">
                <span class="logo-text">SOPs in Pharma</span>
            </a>
            
            <div class="nav-container">
                <ul class="nav-links">
                    {navItems.map(item => (
                        <li>
                            <a 
                                href={item.path} 
                                class="nav-link"
                                aria-current={Astro.url.pathname === item.path ? 'page' : undefined}
                            >
                                {item.title}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </nav>
    </div>
</header>

<style>
    .site-header {
        background: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        position: sticky;
        top: 0;
        z-index: 100;
        border-bottom: 1px solid rgba(95, 95, 255, 0.1);
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    .main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 70px;
    }
    .logo {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: opacity 0.2s ease;
    }
    .logo:hover {
        opacity: 0.8;
    }
    .logo-text {
        color: #5F5FFF;
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: -0.5px;
    }
    .nav-container {
        display: flex;
        align-items: center;
    }
    .nav-links {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    .nav-link {
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        transition: all 0.2s ease;
        font-size: 0.95rem;
    }
    .nav-link:hover {
        color: #5F5FFF;
        background: rgba(95, 95, 255, 0.05);
    }
    .nav-link[aria-current="page"] {
        color: #5F5FFF;
        background: rgba(95, 95, 255, 0.1);
    }

    @media (max-width: 1024px) {
        .nav-links {
            gap: 1rem;
        }
        .nav-link {
            padding: 0.5rem;
        }
    }

    @media (max-width: 768px) {
        .nav-container {
            display: none;
        }
        .main-nav {
            height: 60px;
        }
    }
</style>