---
import Layout from '../layouts/Layout.astro';

const title = "404: Page Not Found | SOPs in Pharma";
const description = "The page you're looking for doesn't exist. Return to our comprehensive guides on SOPs in pharma manufacturing, compliance, and quality control.";
---

<Layout title={title} description={description}>
    <main>
        <div class="error-container">
            <h1>404: Page Not Found</h1>
            <p>Sorry, we couldn't find the page you're looking for.</p>
            <div class="actions">
                <a href="/" class="primary-button">Return Home</a>
                <a href="/blog" class="secondary-button">Browse Articles</a>
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    .error-container {
        text-align: center;
        background: white;
        padding: 3rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
    }
    h1 {
        color: rgb(var(--primary));
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    p {
        color: #4b5563;
        font-size: 1.25rem;
        margin-bottom: 2rem;
    }
    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }
    .primary-button, .secondary-button {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }
    .primary-button {
        background-color: rgb(var(--primary));
        color: white;
    }
    .primary-button:hover {
        background-color: rgb(var(--primary-dark));
    }
    .secondary-button {
        background-color: rgba(var(--primary), 0.1);
        color: rgb(var(--primary));
    }
    .secondary-button:hover {
        background-color: rgba(var(--primary), 0.2);
    }
</style>